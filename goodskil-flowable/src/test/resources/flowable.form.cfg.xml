<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.flowable.common.engine.impl.test.ClosingDataSource">
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
                <constructor-arg>
                    <bean class="com.zaxxer.hikari.HikariConfig">
                        <property name="minimumIdle" value="0" />
                        <property name="jdbcUrl" value="${jdbc.url:jdbc:mysql://127.0.0.1:3306/flowable?characterEncoding=UTF-8}"/>
                        <property name="driverClassName" value="${jdbc.driver:com.mysql.cj.jdbc.Driver}"/>
                        <property name="username" value="${jdbc.username:root}"/>
                        <property name="password" value="${jdbc.password:Password123}"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="formEngineConfiguration" class="org.flowable.form.engine.impl.cfg.StandaloneFormEngineConfiguration">
        <property name="dataSource" ref="dataSource"/>

        <property name="engineLifecycleListeners">
            <list>
                <ref bean="dataSource"/>
            </list>
        </property>

    </bean>
</beans>